/*****************************
 * CSS by Petrucza Alexandra *
 *****************************/
 
 .v-button-wrap img.v-icon {position:absolute;top:0px;display:block; margin: 20px; width:20px; height:20px;}
 
.v-button-noborder {background:transparent;}

.v-table-body {-moz-user-select: -moz-none; -khtml-user-select: none; -webkit-user-select: none; -ms-user-select: none; user-select: none;}

.v-button-nopadding {padding:0;}

.v-caption .v-captiontext {
	font-size: 130%;
}

.v-slot .v-label {
	font-size: 100%;
}

.v-slot-h1 .v-label {
	font-size: 200%;
}

.valo-menu-title,
.v-panel-caption {
	background-image: -webkit-linear-gradient(top, #004d60 60%, #007e9e 98%);
	background-image: linear-gradient(to bottom,#004d60 60%, #007e9e 98%);
	color: white;
}

.v-panel-content {
	background-color: #E8FAFF;
} 

.v-label {
	font-weight: bold;
	font-size: 150%;
}

.v-label h3 {
	font-weight: bold;
	color: white;
	font-size: 100%;
}

.v-button {
	background-image: -webkit-linear-gradient(top, #00b9e8 60%, #007e9e 98%);
	background-image: linear-gradient(to bottom,#00b9e8 60%, #007e9e 98%);
	border-color: #007e9e;
}

.v-table-header-cell,
.v-table-header-cell-asc,
.v-table-header-cell-desc {
 	background-image: -webkit-linear-gradient(top, #3ED8FF 60%, #00b9e8 98%);
	background-image: linear-gradient(to bottom,#3ED8FF 60%, #00b9e8 98%);
	font-weight: bold;
}

.valo-menu {
	background-image: -webkit-linear-gradient(top, #007e9e 60%, #007e9e 98%);
	background-image: linear-gradient(to bottom,#007e9e 60%, #007e9e 98%);
}

.valo-menu-item {
	color: #77E3FF;
}

.valo-menu-subtitle,
.v-menubar-menuitem-caption {
	color: white;
}

.v-menubar-submenu .v-menubar-menuitem .v-menubar-menuitem-caption {
	color: black;
}

.v-panel-caption-hasMainTitle {
	color: black !important;
}

}

