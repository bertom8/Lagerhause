<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="org.lagerhause" transaction-type="RESOURCE_LOCAL">
        <description>
            MySQL adatbazis kapcsolat
        </description>
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>org.lagerhause.Model.Classes.Customer</class>
		<class>org.lagerhause.Model.Classes.Export</class>
		<class>org.lagerhause.Model.Classes.Import</class>
		<class>org.lagerhause.Model.Classes.Storage</class>
		<class>org.lagerhause.Model.Classes.Supplier</class>
		<class>org.lagerhause.Model.Classes.User</class>
		<class>org.lagerhause.Model.Classes.Ware</class>
		<class>org.lagerhause.Model.Classes.Log</class>

         <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/lagerhause?useUnicode=true&amp;characterEncoding=UTF-8" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="pass" />
            
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
            <property name="hibernate.show_sql" value="false" /> <!-- DebugolÃ¡shoz -->
            <property name="hibernate.hbm2ddl.auto" value="none" /> 
        </properties>

    </persistence-unit>

</persistence>
